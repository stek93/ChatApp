<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cw_users"
	android:layout_width="match_parent"
	android:layout_height="75dp"
	android:layout_margin="15dp"
	android:padding="5dp"
	app:cardElevation="4dp">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/tv_new_friend_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginTop="16dp"
			app:layout_constraintLeft_toRightOf="@+id/cw_new_friend_image"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent" tools:text="Pera Peric"/>
		<TextView
			android:id="@+id/tv_new_friend_username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="16dp"
			app:layout_constraintBaseline_toBaselineOf="@+id/tv_new_friend_email"
			app:layout_constraintRight_toRightOf="parent" tools:text="perap"/>
		<TextView
			android:id="@+id/tv_new_friend_email"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp" android:layout_marginLeft="16dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/cw_new_friend_image"
			app:layout_constraintRight_toLeftOf="@+id/tv_new_friend_username"
			app:layout_constraintTop_toBottomOf="@+id/tv_new_friend_name"
			tools:text="pera.p@gmail.com"/>
		<android.support.v7.widget.CardView
			android:id="@+id/cw_new_friend_image"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:elevation="0dp"
			app:cardCornerRadius="25dp"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp">

			<ImageView
				android:id="@+id/img_new_friend_profile_image"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp" android:scaleType="fitXY"
				tools:src="@mipmap/ic_launcher"/>

		</android.support.v7.widget.CardView>

	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>