<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/l_image_holder"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:visibility="visible">

    <ImageView
        android:id="@+id/iv_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="ChatApp"
            android:layout_marginTop="50dp"
            android:fontFamily="monospace"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"/>

</RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/l_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress|textMultiLine"
            android:hint="@string/email"
            android:layout_margin="10dp"
            android:textColorHint="#2c75a0"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword|textMultiLine"
            android:maxLength="2000"
            android:maxLines="4"
            android:hint="@string/password"
            android:layout_margin="10dp"
            android:textColorHint="#2c75a0" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Sign in"
            android:textColor="#fff"
            android:background="@drawable/btn_rounded_borders"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:background="@drawable/btn_rounded_borders"
            android:textColor="#fff"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/et_reg_input"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#2c75a0"
            android:padding="@dimen/et_reg_padding">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/firstname"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/et_reg_input"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#2c75a0"
            android:padding="@dimen/et_reg_padding">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/lastname"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/et_reg_input"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#2c75a0"
            android:padding="@dimen/et_reg_padding">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/username"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/et_reg_input"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#2c75a0"
            android:padding="@dimen/et_reg_padding">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/password"
                android:inputType="textPassword|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/et_reg_input"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#2c75a0"
            android:padding="@dimen/et_reg_padding">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/email"
                android:inputType="textEmailAddress|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_submitRegistration"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/submit"
            android:background="@drawable/btn_rounded_borders"
            android:textColor="#fff"
            android:layout_margin="15dp"/>
        <Button
            android:id="@+id/btn_closeRegistration"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/close"
            android:textColor="#fff"
            android:background="@drawable/btn_rounded_borders" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/l_facebook_google_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/email_login"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="SIGN IN"
            android:textColor="#fff"
            android:background="@drawable/btn_rounded_borders"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true" />

        <FrameLayout
            android:id="@+id/frame_layout_facebook"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@id/email_login"
            android:layout_marginLeft="80dp">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_facebook"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

            <ImageView
                android:id="@+id/btn_facebook_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/facebookbtn" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_layout_google"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/email_login"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp">

            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btn_google_custom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/googlecustom"/>

        </FrameLayout>


    </RelativeLayout>


</LinearLayout>